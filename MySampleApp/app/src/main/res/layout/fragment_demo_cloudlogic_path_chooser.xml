<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cloudlogic_path_chooser_heading_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_content_text"
            android:text="@string/feature_cloud_logic_apis_path_chooser_heading"/>

        <EditText
            android:id="@+id/cloudlogic_path_chooser_edit_text"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:ems="10"
            android:inputType="text|textNoSuggestions"
            android:background="@android:drawable/editbox_background_normal"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_content_text"
            />

        <ImageButton
            android:id="@+id/cloudlogic_path_chooser_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_check"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/cloudlogic_path_chooser_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>
