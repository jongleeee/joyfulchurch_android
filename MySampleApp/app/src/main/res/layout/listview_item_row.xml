<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="10dp"
    android:weightSum="6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TextView android:id="@+id/sermonMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/sermonDate"
            android:textColor="#4CA214"
            android:text="DEC"/>

        <TextView android:id="@+id/sermonDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:textColor="#4CA214"
            android:text="09"/>

        <TextView android:id="@+id/sermonYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sermonDate"
            android:textColor="#4CA214"
            android:text="2017"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1" >

        <TextView android:id="@+id/txtSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txtTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:textSize="15dp"
            android:text="로마서 강해 (5)"
             />

        <TextView android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:text="이름을 바꿔주시는 하나님"
            android:textStyle="bold"
            android:textSize="22dp"
            />

        <TextView android:id="@+id/txtVerse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="로마서 7:10 - 12"
            android:textSize="15dp"
            />

    </RelativeLayout>
</LinearLayout>